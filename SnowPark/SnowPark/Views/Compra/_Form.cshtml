@model Compra
<style>
    .custom-form {
        padding: 30px; /* Adiciona 20px de padding em todas as direções */
        margin-top: 70px; /* Adiciona margem no topo */
    }
</style>

<div class="align-items-center justify-content-center custom-form">
    <div class="mb-3">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Cpf"></label>
        <input asp-for="Cpf" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="DataVisita"></label>
        <input asp-for="DataVisita" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Servico"></label>
        <select asp-for="Servico" class="form-select"
                asp-items="@Html.GetEnumSelectList<Servico>()">
            <option>Selecione</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="TipoPagamento"></label>
        <select asp-for="TipoPagamento" class="form-select"
                asp-items="@Html.GetEnumSelectList<TipoPagamento>()">
            <option>Selecione</option>
        </select>
    </div>
</div>

